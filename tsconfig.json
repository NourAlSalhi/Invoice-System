{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/features/payout/hooks/useSWRHook/index.js",
    "src/components/Modal/index.jsx",
    "src/layouts/GeneralLayout/components/mainMenu/index.jsx",
    "src/layouts/GeneralLayout/index.jsx"
  ],
  "exclude": ["node_modules"]
}
